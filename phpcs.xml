<?xml version="1.0"?>
<!-- see: https://stackoverflow.com/questions/41233837/why-laravel-migrations-class-doesnt-have-a-namespace -->
<ruleset name="Laravel PSR12">
  <description>Standard PSR-12, accepting the fact that Laravel Migration does not have namespace</description>
  <file>database</file>
  <arg value="p"/>
  <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
      <severity>0</severity>
  </rule>
  <rule ref="PSR12"/>
</ruleset>
